<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Campers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 액션바 삭제 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- CommonBottomSheetDialog  -->
    <style name="CommonBottomSheetDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="behavior_draggable">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--  CommonInputDialog  -->
    <style name="CommonInputDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">100%</item> // 최대 크기
        <item name="android:windowMinWidthMinor">100%</item> // 최소 크기
        <item name="android:minHeight">0dp</item> 👈 height 설정
    </style>
</resources>
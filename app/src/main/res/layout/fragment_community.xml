<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/home_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ACABAB"
            android:text="모닥불 게시판 이동"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/community_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_to_list">

            <EditText
                android:id="@+id/searchText"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:hint="다른 게시판을 검색해보세요"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/searchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/searchText"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/my_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:text="나의 활동"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/community_search_btn" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout14"
            android:layout_width="350dp"
            android:layout_height="95dp"
            android:background="@drawable/home_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_activity">

            <ImageView
                android:id="@+id/my_write_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/my_write_image"
                app:layout_constraintBottom_toBottomOf="@+id/my_board_list"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/my_board_list" />

            <TextView
                android:id="@+id/my_board_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:text="내가 쓴 글"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/my_write_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/my_comment_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/my_comment_image"
                app:layout_constraintBottom_toBottomOf="@+id/my_comment_list"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/my_comment_list" />

            <TextView
                android:id="@+id/my_comment_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:text="내가 댓글 단 글"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/my_comment_image"
                app:layout_constraintTop_toBottomOf="@+id/my_board_list" />

            <ImageView
                android:id="@+id/scrap_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/scrap_image"
                app:layout_constraintBottom_toBottomOf="@+id/scrap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrap" />

            <TextView
                android:id="@+id/scrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="스크랩"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/scrap_image"
                app:layout_constraintTop_toBottomOf="@+id/my_comment_list" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/default_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="기본 게시판"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout14" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout15"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:background="@drawable/home_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/default_community">

            <ImageView
                android:id="@+id/glamping_board_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_on"
                app:layout_constraintBottom_toBottomOf="@+id/glamping_board"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/glamping_board" />

            <TextView
                android:id="@+id/glamping_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="글램핑 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/glamping_board_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/camping_board_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_on"
                app:layout_constraintBottom_toBottomOf="@+id/camping_board"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/camping_board" />

            <TextView
                android:id="@+id/camping_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="캠핑 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/camping_board_image"
                app:layout_constraintTop_toBottomOf="@+id/glamping_board" />

            <ImageView
                android:id="@+id/trade_board_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_on"
                app:layout_constraintBottom_toBottomOf="@+id/trade_board"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/trade_board" />

            <TextView
                android:id="@+id/trade_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="중고거래 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/camping_board_image"
                app:layout_constraintTop_toBottomOf="@+id/camping_board" />

            <ImageView
                android:id="@+id/free_board_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_on"
                app:layout_constraintBottom_toBottomOf="@+id/free_board"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/free_board" />

            <TextView
                android:id="@+id/free_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="자유 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/free_board_image"
                app:layout_constraintTop_toBottomOf="@+id/trade_board" />

            <ImageView
                android:id="@+id/notice_board_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_off"
                app:layout_constraintBottom_toBottomOf="@+id/notice_board"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/notice_board" />

            <TextView
                android:id="@+id/notice_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="공지사항"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/notice_board_image"
                app:layout_constraintTop_toBottomOf="@+id/free_board" />

            <ImageView
                android:id="@+id/question_board_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_off"
                app:layout_constraintBottom_toBottomOf="@+id/question_board"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/question_board" />

            <TextView
                android:id="@+id/question_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="질문 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/question_board_image"
                app:layout_constraintTop_toBottomOf="@+id/notice_board" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/user_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:text="사용자 게시판"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout15" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:background="@drawable/home_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_community">

            <ImageView
                android:id="@+id/user_board1_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_on"
                app:layout_constraintBottom_toBottomOf="@+id/user_board1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_board1" />

            <TextView
                android:id="@+id/user_board1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="강원도 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_board1_image"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/user_board2_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_on"
                app:layout_constraintBottom_toBottomOf="@+id/user_board2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_board2" />

            <TextView
                android:id="@+id/user_board2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="홍보 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_board2_image"
                app:layout_constraintTop_toBottomOf="@+id/user_board1" />

            <ImageView
                android:id="@+id/user_board3_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_on"
                app:layout_constraintBottom_toBottomOf="@+id/user_board3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_board3" />

            <TextView
                android:id="@+id/user_board3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="한림대 캠핑 모임 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_board3_image"
                app:layout_constraintTop_toBottomOf="@+id/user_board2" />

            <ImageView
                android:id="@+id/user_board4_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_off"
                app:layout_constraintBottom_toBottomOf="@+id/user_board4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_board4" />

            <TextView
                android:id="@+id/user_board4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="캠핑 초보 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_board4_image"
                app:layout_constraintTop_toBottomOf="@+id/user_board3" />

            <ImageView
                android:id="@+id/user_board5_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_off"
                app:layout_constraintBottom_toBottomOf="@+id/user_board5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_board5" />

            <TextView
                android:id="@+id/user_board5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="캠핑 고수 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_board5_image"
                app:layout_constraintTop_toBottomOf="@+id/user_board4" />

            <ImageView
                android:id="@+id/user_board6_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/community_like_off"
                app:layout_constraintBottom_toBottomOf="@+id/user_board6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_board6" />

            <TextView
                android:id="@+id/user_board6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:text="캠핑 중수 게시판"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/user_board6_image"
                app:layout_constraintTop_toBottomOf="@+id/user_board5" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
